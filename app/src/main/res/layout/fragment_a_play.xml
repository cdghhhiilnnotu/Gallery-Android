<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/aplay_fragment"
    android:gravity="center"
    tools:context=".APlayFragment">

    <ImageView
        android:id="@+id/audios_theme"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/ic_music_24"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_position"
            android:text="00:00"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/seek_bar"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_duration"
            android:text="00:00"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn_rew"
            android:layout_margin="10dp"
            android:src="@drawable/ic_rew_24"/>
        
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn_play"
            android:layout_margin="10dp"
            android:src="@drawable/ic_play_24"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn_pause"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:src="@drawable/ic_pause_24"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn_ff"
            android:layout_margin="10dp"
            android:src="@drawable/ic_ff_24"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btn_speed"
            android:text="1.0x"/>

    </LinearLayout>


</LinearLayout>